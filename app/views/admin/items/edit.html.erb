<h1>商品編集画面(admin/items/edit)ページ</h1>


<%= form_with model: @item, url: admin_edit_item_path(@item.id), method: :patch do |f| %>


  <h4>商品名</h4>
    <%= f.text_field :name %>


  <h4>商品説明</h4>
    <%= f.text_area :introduction %>


  <h4>税抜き価格</h4>
    <%= f.text_field :price %> 円


  <%= f.submit '保存' %>

<% end %>